{% extends "base.jinja" %}

{% block content %}

<form action="/customers/update/{{customer.id}}" method="POST">
<h3>{{ customer.customer_name }}

<label for="name">Update Name</label>
    <input type="text" name="name" id="name" value={{customer.customer_name}}>
<h3>Phone Number: {{ customer.customer_phone_number }}</h3>
<label for="number">Update Phone Number</label>
    <input type="text" name="number" id="number" value={{customer.customer_phone_number}}>
<h3>Address: {{ customer.customer_street_name }}</h4>
<label for="address">Update Address</label>
    <input type="text" name="address" id="address" value={{customer.customer_street_name}}>
<input type="submit" class="update" value="Update">
</form>
{% endblock%}