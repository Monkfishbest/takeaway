{% extends "base.jinja"%}

{% block content%}
<form class="form-inline" action="/customers" method="post">
            <label for="customer_name">Customer Name</label>
            <input type="text" name="customer_name" id="customer_name" autocomplete="off" required>
            <label for="phone_number">Phone Number</label>
            <input type="text" name="phone_number" id="phone_number" autocomplete="off" required>
            <label for="street_name">Street Name</label>
            <input type="text" name="street_name" id="street_name" autocomplete="off" required>
            <input type="submit" value="Add Customer">
          </form>

<div class="customer_info">
    {% for customer in customers %}
      <div class="customer">
        <h2>Name: {{ customer.customer_name }}</h2>
        <h3>Phone Number: {{ customer.customer_phone_number}}</h3>
        <h4>Address: {{ customer.customer_street_name }}</h4>

        <form class="form" action="/customers/delete/{{ customer.id }}" method="POST">
            <input type="submit" value="Delete">
        </form>
        
        <h5><a href="/customers/{{ customer.id }}">Select Customer</a>
      </div>
    {% endfor %}
</div>
{% endblock %}