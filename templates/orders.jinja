{% extends "base.jinja" %}

{% block content %}
  <form class="order-form-order" action="/orders" method="post">
    <label for="dropdown">Customer:</label> 
    <select id="dropdown" name="customers">
      {% for customer in customers %}
     
        <option value="{{ customer.id }}">{{ customer.customer_name }}</option>
      {% endfor %}
    </select>
    <input type="submit" class="add-order-button" value="Add Order">
  </form>

  <div class="order-list">
  
    {% for order in orders %}
      <div class="order-item">
      <br>
        <a href="/orders/{{ order.id }}" class="order-link">
          <div class="click-order-button">
          Order Number: {{ order.id }}<br>
          Name: {{ order.customer.customer_name }}
          </div>
        </a><br>
        <label for="completed">Completed:</label>
        <input type="checkbox" id="completed" name="completed" value="completed">
        <form class="delete-order-form" action="/orders/delete/{{ order.id }}" method="POST">
          <input type="submit" class="delete-order-button" value="Delete">
        </form>
      </div>
    {% endfor %}
  </div>
{% endblock %}
